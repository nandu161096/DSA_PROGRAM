#include <stdio.h>
#include <stdint.h>

#define P(n) printf("%d ", n);

int main() {
    int a = 10, b = 30;
  /*  a = a^b;
    b = a^b;
    a = a^b; */
   int *p = &a, *q = &b;
   printf("p %p q %p before\n",p,q);
p = (int *)((uintptr_t)p ^ (uintptr_t)q);
q = (int *)((uintptr_t)p ^ (uintptr_t)q);
p = (int *)((uintptr_t)p ^ (uintptr_t)q);
   printf("p %p q %p after\n",p,q);
    printf("%d %d\n",a,b);
    return 0;
}
