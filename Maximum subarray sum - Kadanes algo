#include <stdio.h>


int maxSubArray(int arr[], int n) {
    int max, curr; 
    max = curr = arr[0];
    int i = 0;
    for(i = 0; i < n;i++) {
        curr = (curr > 0) ? curr + arr[i]: arr[i];
        if (curr > max) {
            max = curr;
        }
    }
    return max;
}

int main(void) {
    int arr[] = {-2, 1, -3, 4, -1, 2, 1, -5, 4};
    int n = sizeof(arr) / sizeof(arr[0]);

    int result = maxSubArray(arr, n);

    printf("Maximum Contagious subarray sum = %d\n", result);
    return 0;
}
