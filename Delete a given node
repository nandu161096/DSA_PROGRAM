#include <stdio.h>
#include <stdlib.h>

struct node {
    int data;
    struct node *next;
};

void print_list(struct node *head)
{
    while (head) {
        printf("%d -> ", head->data);
        head = head->next;
    }
    printf("NULL\n");
}

void delete_node(struct node *del) {
    if (!del || !del->next) {
        return;
    }
    struct node *temp;
    
    temp = del->next;
    del->data = temp->data;
    del->next = temp->next;
    free(temp);
}

int main()
{
    int i;
    struct node *head1 = NULL, *head2 = NULL;
    struct node *prev = NULL, *temp = NULL;
    struct node *intersection = NULL;

    int arr[]  = {1,3,5,7,9};
    int arr1[] = {2,4,6,8,10};
    int n  = sizeof(arr) / sizeof(arr[0]);
    int n1 = sizeof(arr1) / sizeof(arr1[0]);

    /* Create first list */
    prev = NULL;
    for (i = 0; i < n; i++) {
        temp = malloc(sizeof(struct node));
        temp->data = arr[i];
        temp->next = NULL;

        if (!head1)
            head1 = temp;
        else
            prev->next = temp;

        prev = temp;

        /* Save node with value 7 as intersection point */
        if (temp->data == 5)
            intersection = temp;
    }

    /* Create second list */
    prev = NULL;
    for (i = 0; i < n1; i++) {
        temp = malloc(sizeof(struct node));
        temp->data = arr1[i];
        temp->next = NULL;

        if (!head2)
            head2 = temp;
        else
            prev->next = temp;

        prev = temp;
    }
    prev->next = intersection;

    printf("List 1:\n");
    print_list(head1);

//    printf("List 2:\n");
  //  print_list(head2);
    
    delete_node(head1->next->next);
        printf("After del List 1:\n");
    print_list(head1);

    return 0;
}
