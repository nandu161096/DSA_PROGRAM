#include <stdio.h>
#include <limits.h>

int add_overflow(int a, int b) {
    if ((b > 0) && (a > INT_MAX - b) ||
        (b < 0) && (a < INT_MIN - b)) {
            return 1;
        }
    return 0;
}

int main() {
    int a = INT_MAX, b = 1;

    if (add_overflow(a, b))
        printf("Overflow detected\n");
    else
        printf("No overflow\n");

    return 0;
}
