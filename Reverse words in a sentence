#include <stdio.h>


void reverse(char *str, int s, int e) {
    while(s < e) {
        char temp = str[s];
        str[s++] = str[e];
        str[e--] = temp;
    }    
}

void reverseWords(char *str) {
    int end = 0, i = 0;
    
    while(str[end]!= '\0') {
        end++;
    }
    
    reverse(str, 0, end-1);
    printf("%s\n",str);
    int start = 0;
    for(i = 0;i <=end;i++) {
        if ((str[i] == ' ') || (str[i] == '\0')) {
            reverse(str,start,i-1);
            start = i + 1;
        }
    }
}

int main() {
    char str[] = "I love nanda";
    reverseWords(str);
    printf("%s\n", str);
    return 0;
}
