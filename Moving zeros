#include <stdio.h>
#include <limits.h>

void movezeros(int arr[], int n) {
    int j = 0, i = 0;
    for(i = 0; i < n;i++) {
        if(arr[i] !=0) {
            arr[j++] = arr[i];
        }
    }
    while (j < n)
        arr[j++] = 0;
}

void print_arr(int arr[], int n) {
    for(int i = 0; i < n;i++) {
        printf("arr[%d] %d ",i,arr[i]);
    }
}

int main() {
    int arr[] = {0, 1, 0, 0, 3, 12};
    int n = 6;
    movezeros(arr, n);
    print_arr(arr,n);
  //  int n = sizeof(arr) / sizeof(arr[0]);
    //int max2 = second_largest(arr,n);
//    printf("%d ",max2);
    return 0;
}
