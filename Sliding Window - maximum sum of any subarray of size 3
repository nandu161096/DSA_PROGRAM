arr = [2, 8, 5, 1, 7, 2]
k = 3

print("length of arr is ", len(arr))
win_sum = sum(arr[0:k])
max_sum = win_sum
print("win sum is", win_sum)

for i in range(k, len(arr)):
    win_sum = win_sum + arr[i]
    win_sum = win_sum - arr[i-k]
    max_sum = max(max_sum, win_sum)
    
print("max_sum is", max_sum)

