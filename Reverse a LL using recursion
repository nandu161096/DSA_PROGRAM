
#include <stdio.h>
#include <stdlib.h>

struct node {
    int data;
    struct node *next;
};

void print_list(struct node *head) {
    struct node *temp = head;
    while(temp !=NULL) {
        printf("%d ",temp->data);
        temp = temp->next;
    }
    printf("\n");
}

struct node* reverseListRecursive(struct node* head) {
    
    if (head == NULL || head->next == NULL) {
        printf("head data %d\n",head->data);
        return head;
    }
    
    printf("head %d\n",head->data);
    struct node* newHead = reverseListRecursive(head->next);
    printf("newHead %d head %d\n",newHead->data,head->data);
  //  printf("be head %d next %d next next %d\n",head->data, head->next->data, head->next->next->data);
    
    head->next->next = head;
    printf("af head %d next %d next next %d\n",head->data, head->next->data, head->next->next->data);
    head->next = NULL;
//    printf("head %d next %d next next %d\n",head->data, head->next->data, head->next->next->data);
    printf("newHead end %d\n",newHead->data);
    return newHead;
}

int main()
{
    struct node *temp = NULL, *prev = NULL, *head = NULL, *middle = NULL;
    int i = 0;
    for(i = 0; i < 4;i++) {
        temp = (struct node*) malloc(sizeof(struct node));
        temp->data = i+1;
        temp->next = NULL;
        if (head == NULL) {
            head = temp;
        } else {
            prev->next = temp;
        }
        prev = temp;
    }
    print_list(head);
    head = reverseListRecursive(head);
    print_list(head);
    
    return 0;
}
