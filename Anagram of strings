#include <stdio.h>
#include <string.h>

int isAnagram(char str1[], char str2[]) {
    int count[256] = {0}, i = 0;
    
    while(*str1) {
        count[(unsigned char)*str1++]++;
    }
    while(*str2) {
        count[(unsigned char)*str2++]--;
    }
    
    for(i = 0; i < 256;i++) {
        if (count[i] != 0) {
            return 0;
        }
    }
    return 1;
}

int main() {
    printf("%d\n", isAnagram("listen", "silent")); // 1
}
