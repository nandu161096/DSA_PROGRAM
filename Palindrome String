#include <stdio.h>
#include <string.h>

int isPalindrome(char str[]) {
    int len = strlen(str) - 1;
    int l = 0, r = len;
    printf("%s\n",str);
    while(l < r) {
        if (str[l++] != str[r--]) {
            return 0;
        }
    }
    return 1;
}

int main() {
    printf("%d\n", isPalindrome("madam")); // 1
}
