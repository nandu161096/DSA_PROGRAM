#include <stdio.h>

void reverse_arr (int arr[], int n) {
    int l = 0, r = n-1;
    while(l < r) {
        int temp = arr[l];
        arr[l++] = arr[r];
        arr[r--] = temp;
    }
}

int main()
{
    int i = 0;
    int arr[] = {1,3,4,5,6};
    reverse_arr(arr, sizeof(arr)/sizeof(arr[0]));
    for(i = 0; i <sizeof(arr)/sizeof(arr[0]); i++) {
        printf("arr[%d] %d ",i,arr[i]);
    }
    return 0;
}
