#include <stdio.h>
#include <string.h>
#include <stdlib.h>

void *my_memset(void *ptr, int val, size_t n) {
    unsigned char *p = ptr;
    while(n--) {
        *p = (unsigned char)val;
        p++;
    }
    return ptr;
}

int main() {
    int *ptr;
    ptr = malloc(3*sizeof(int));
    my_memset(ptr, 0x55, 3*sizeof(int));
    int i = 0;
    for(i = 0; i < 3; i++) {
        printf("ptr[%d]:%x \n",i,ptr[i]);
    }
}
