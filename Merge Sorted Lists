#include <stdio.h>
#include <stdlib.h>

struct node {
    int data;
    struct node*next;
};

struct node*merge_sorted(struct node *l1, struct node *l2)  {
    struct node *head = NULL, *tail = NULL;
    
    if (l1->data <= l2->data) {
        head = tail = l1;
        l1 = l1->next;
    } else {
        head = tail = l2;
        l2 = l2->next;        
    }
    
    while(l1 && l2) {
        if (l1->data <= l2->data) {
            tail->next = l1;
            l1 = l1->next;
        } else {
            tail->next = l2;
            l2 = l2->next;            
        }
        tail = tail->next;
    }
    tail = l1 ? l1 : l2;
    return head;
}

void print_list(struct node *head) {
    struct node *temp = head;
    while(temp) {
        printf(" %d",temp->data);
        temp = temp->next;
    }
    printf("\n");
}

int main()
{
    int i = 0;
    struct node *prev = NULL, *head1 = NULL, *temp = NULL, *head2 = NULL, *merged = NULL;
    int arr[] = {1,3,5,7,9};
    int n = sizeof(arr)/sizeof(arr[0]);
    int arr1[] = {2,4,6,8,10};
    int n1 = sizeof(arr1)/sizeof(arr1[0]);  
    
    for(i = 0; i < n;i++) {
        temp = (struct node*)malloc(sizeof(struct node));
        temp->data = arr[i];
        temp->next = NULL;
        if (head1 == NULL) {
            head1 = temp;
        } else {
            prev->next = temp;
        }
        prev = temp;
    }
    
    for(i = 0; i < n;i++) {
        temp = (struct node*)malloc(sizeof(struct node));
        temp->data = arr1[i];
        temp->next = NULL;
        if (head2 == NULL) {
            head2 = temp;
        } else {
            prev->next = temp;
        }
        prev = temp;
    }
    
    print_list(head1);
    print_list(head2);
    merged = merge_sorted(head1, head2);
    print_list(merged);
    return 0;
}
