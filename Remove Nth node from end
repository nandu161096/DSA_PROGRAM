
#include <stdio.h>
#include <stdlib.h>

struct node {
    int data;
    struct node *next;
};

void print_list(struct node *head) {
    struct node *temp = head;
    while(temp !=NULL) {
        printf("%d ",temp->data);
        temp = temp->next;
    }
    printf("\n");
}

void removeNthFromEndNaive(struct node* head, int n) {
    int len = 0;
    struct node *temp = NULL, *prev = NULL;
    temp = head;
    while(temp!=NULL) {
        len++;
        temp = temp->next;
    }
    int i = len - n;
    int j = i;
    temp = head;
    while(j > 0) {
        prev = temp;
        temp = temp->next;
        j--;
    }
    printf("j %d i %d temp %d prev %d\n",j,i,temp->data,prev->data);
    prev->next = temp->next;
    free(temp);
}

void removeNthFromEnd(struct node* head, int n) {
    struct node dummy;
    dummy.next = head;
    
    struct node *fast, *slow;
    fast = slow = &dummy;
    
    int i = 0;
    for(i = 0; i < n;i++) {
        fast = fast->next;
    }
    
    while(fast->next) {
        slow =slow->next;
        fast = fast->next;
    }
    
    struct node *del = slow->next;
    slow->next = del->next;
    free(del);
}

int main()
{
    struct node *temp = NULL, *prev = NULL, *head = NULL, *middle = NULL;
    int i = 0;
    for(i = 0; i < 4;i++) {
        temp = (struct node*) malloc(sizeof(struct node));
        temp->data = i+1;
        temp->next = NULL;
        if (head == NULL) {
            head = temp;
        } else {
            prev->next = temp;
        }
        prev = temp;
    }
    print_list(head);
  //  head = reverseListRecursive(head);
    //print_list(head);
    removeNthFromEnd(head,3);
     print_list(head);
    
    return 0;
}
