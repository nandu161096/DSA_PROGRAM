#include <stdio.h>
#include <limits.h>

int add(int a, int b) {
    int sum = 0, carry = 0;
    while (b!=0) {
        sum = a^b;
        carry = (a & b) <<1;
        a = sum;
        b = carry;
    }
    return a;
}

int mul(int a, int b) {
    int result = 0;
    while(b!=0) {
        if (b & 1) {
            result = add(result, a);
        }
        a = a <<1;
        b = b >>1;
    }  
    return result;
}

int mul_loop(int a, int b) {
    int result = 0, i = 0;
    for(i = 0; i < b;i++) {
        result =  add(result, a);
    }
    return result;
}

int main() {
    int sum = mul(5,7);
    printf("mul is %d \n",sum);
    sum = mul_loop(5,7);
    printf("mul is %d using loop  \n",sum);
    return 0;
}
