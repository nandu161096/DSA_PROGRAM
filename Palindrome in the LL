#include <stdio.h>
#include <stdlib.h>

struct node {
    int data;
    struct node *next;
};

struct node *reverse(struct node *head) {
    struct node *prev = NULL, *curr = NULL, *next = NULL;
    curr = head;
    while(curr) {
        next = curr->next;
        curr->next = prev;
        prev = curr;
        curr = next; 
    }
    return prev;
}

void print_list(struct node *head)
{
    while (head) {
        printf("%d -> ", head->data);
        head = head->next;
    }
    printf("NULL\n");
}

int is_palindrome(struct node *head) {
    struct node *temp = NULL, *sec = NULL, *fast = NULL, *slow = NULL;
    slow = fast = head;
    
    while(fast && fast->next) {
        slow = slow->next;
        fast = fast->next->next;
    }
    
    if (fast != NULL)
        slow = slow->next;
    
    printf("middle is %d\n",slow->data);
    sec = reverse(slow);
    temp = head;
    
    while(sec!=NULL) {
        if (sec->data!=temp->data) {
            return 0;
        }
        temp = temp->next;
        sec = sec->next;
    }
    return 1;
}

int main()
{
    int i;
    struct node *head1 = NULL, *head2 = NULL;
    struct node *prev = NULL, *temp = NULL;
    struct node *intersection = NULL;
    
    int arr[] = {1, 3, 5, 3, 1};
    int arr1[] = {2,4,6,8,10};
    int n  = sizeof(arr) / sizeof(arr[0]);
    int n1 = sizeof(arr1) / sizeof(arr1[0]);

    /* Create first list */
    prev = NULL;
    for (i = 0; i < n; i++) {
        temp = malloc(sizeof(struct node));
        temp->data = arr[i];
        temp->next = NULL;

        if (!head1)
            head1 = temp;
        else
            prev->next = temp;

        prev = temp;
    }

    printf("List 1:\n");
    print_list(head1);
    head1 = reverse(head1);
    printf("After reverse List 1:\n");
    print_list(head1);
    int ret = is_palindrome(head1);
    printf("The LL is %s\n",(ret?"palindrome":"not palindrome"));

    return 0;
}
