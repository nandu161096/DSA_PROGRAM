#include <stdio.h>
#include <stdint.h>

void printBinary(unsigned int n) {
    for (int i = 31; i >= 0; i--) {
        printf("%d", (n >> i) & 1);
        if (i % 4 == 0) printf(" ");
    }
    printf("\n");
}

unsigned int reverseBits(int n) {
    int rev = 0;
    int i = 0;
    for(i = 0; i < 32;i++) {
      //  printBinary(rev);
        rev = rev << 1;
        rev = rev | (n & 1);
        n = n >> 1;
    }
    return rev;
}

unsigned int reverseBits1(int n) {
    int rev = 0;
    int i = 0;
    for(i = 0; i < 32;i++) {
        if (n & (1 << i)) {
            rev = rev | (1 << 31-i);
        }
    }
    return rev;
}

int main(void) {
    unsigned int n = 13;   // 00000000 00000000 00000000 00001101

    printf("Original number : %u\n", n);
    printf("Original bits   : ");
    printBinary(n);

    unsigned int r = reverseBits(n);

    printf("Reversed number : %u\n", r);
    printf("Reversed bits   : ");
    printBinary(r);

    r = reverseBits1(n);

    printf("Reversed number : %u\n", r);
    printf("Reversed bits   : ");
    printBinary(r);
    return 0;
}

