#include <stdio.h>
#include <stdlib.h>

struct node {
    int data;
    struct node *next;
};

void print_list(struct node *head) {
    struct node *temp = head;
    while(temp !=NULL) {
        printf("%d ",temp->data);
        temp = temp->next;
    }
    printf("\n");
}

int detect_loop(struct node *head) {
    struct node *slow = NULL, *fast = NULL, *start = NULL;
    int len = 0;
    slow = fast = head;
    while(fast && fast->next) {
        slow = slow->next;
        fast = fast->next->next;
        if (slow == fast) {
            start = head;
            printf("Loop is detected\n");
            while(start != slow) {
                start = start->next;
                slow = slow->next;
            }
            while(slow->next != start) {
                len++;
                slow = slow->next;
            }
            slow->next = NULL;
            printf("len of loop %d\n",len);
            return 1;
        }
    }    
    return 0;
}

int main()
{
    struct node *temp = NULL, *prev = NULL, *head = NULL, *slow = NULL, *fast = NULL;
    int i = 0;
    for(i = 0; i < 7;i++) {
        temp = (struct node*) malloc(sizeof(struct node));
        temp->data = i+1;
        temp->next = NULL;
        if (head == NULL) {
            head = temp;
        } else {
            prev->next = temp;
        }
        prev = temp;
    }
    print_list(head);
    int res = detect_loop(head);
    printf("res %d\n",res);
    /* Create a loop */
    head->next->next->next->next = head;
    res = detect_loop(head);
    printf("res %d\n",res);
    print_list(head);

 //   head = reverse_list(head);
 //   print_list(head);
    return 0;
}
